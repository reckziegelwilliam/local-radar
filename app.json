{
  "expo": {
    "name": "Buzzy",
    "slug": "buzzy",
    "scheme": "localradar",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/brand/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/brand/splash_light.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFC107",
      "dark": {
        "image": "./assets/brand/splash_dark.png",
        "backgroundColor": "#0F0F0F"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.localradar.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Buzzy needs location access to show nearby events and help you create events at your current location.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Buzzy needs location access to show nearby events and help you create events at your current location.",
        "NSCameraUsageDescription": "Buzzy needs camera access to let you take photos for your events.",
        "NSPhotoLibraryUsageDescription": "Buzzy needs photo library access to let you select photos for your events.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/brand/adaptive-icon-foreground.png",
        "backgroundImage": "./assets/brand/adaptive-icon-background.png"
      },
      "package": "com.localradar.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Poppins-Regular.ttf",
            "./assets/fonts/Poppins-SemiBold.ttf"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Buzzy to use your location to show nearby events."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Buzzy to access your photos to add images to events.",
          "cameraPermission": "Allow Buzzy to use your camera to take photos for events."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#FFC107"
        }
      ]
    ],
    "linking": {
      "prefixes": [
        "localradar://",
        "https://localradar.app"
      ],
      "config": {
        "screens": {
          "(tabs)": {
            "screens": {
              "map": "",
              "index": "home"
            }
          },
          "(auth)": {
            "screens": {
              "sign-in": "auth/sign-in"
            }
          },
          "create": "create",
          "event/[id]": "event/:id"
        }
      }
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "df50d7d9-741e-430f-964e-5b0b9fc1e8a0"
      }
    },
    "owner": "liamrex"
  }
}
